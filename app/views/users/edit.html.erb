<% provide(:title, "Редактирование сотрудника") %>
<h1>Редактирование профиля сотрудника</h1>

<%= render 'shared/error_messages' %>
<div class="row">
  <div class="col-md-2 col-md-offset-4">
    <%= form_for(@user) do |f| %>

      <%= f.label :name, "ФИО" %>
      <%= f.text_field :name %>

      <%= f.label :login, "Логин" %>
      <%= f.text_field :login %>

      <%= f.label :subdivision_id, "Подразделение" %>
      <div class="styled-select">
      <%= f.select(:subdivision_id, @sub_options) %>
      </div>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтвердите пароль" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Сохранить изменения", class: "btn btn-success btn-lg" %>
    <% end %>
  </div>
</div>