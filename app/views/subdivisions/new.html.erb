<% provide(:title, 'Создать подразделение') %>
<h1>Создание нового подразделения</h1>

<%= render 'shared/error_mes_subdiv' %>
<div class="row">
  <div class="col-md-3 col-md-offset-3">
    <%= form_for(@subdivision) do |f| %>

      <%= f.label :fullname, "Полное название подразделения" %>
      <%= f.text_field :fullname %>

      <%= f.label :name, "Краткое название подразделения" %>
      <%= f.text_field :name %>

      <%= f.label :leader, "Руководитель подразделения" %>
      <%= f.password_field :leader %>

      <%= f.submit "Создать", class: "btn btn-success btn-lg" %>
    <% end %>
  </div>
</div>
